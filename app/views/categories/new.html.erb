<%= render 'shared/content_title', title: 'Add Category' %>
<%= render 'shared/validation_errors', submission: @category %>

<div class='well'>
  <%= form_for @category do |f| %>
    <div class='control-group'>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <%= f.submit 'Add Category', class: 'btn btn-primary' %>
  <% end %>
</div>
