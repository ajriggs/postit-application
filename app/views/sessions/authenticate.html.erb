<%= render 'shared/content_title', title: "Let's Authenticate!" %>
<div class ='well'>
  <%= form_tag('/authenticate', method: 'post') do %>
    <div class='control-group'>
      <%= label_tag :pin, 'Enter your PIN' %>
      <%= text_field_tag :pin %>
    </div>
    <div class='control-group'>
      <%= submit_tag('Authenticate', class: 'btn btn-success') %>
    </div>
  <% end %>
</div>
