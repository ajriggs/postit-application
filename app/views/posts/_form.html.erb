<div class='well'>
  <%= form_for @post do |f| %>
    <div class='control-group'>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class='control-group'>
      <%= f.label :url %>
      <%= f.text_field :url %>
    </div>
    <div class='control-group'>
      <%= f.label :description %>
      <%= f.text_area :description, rows: 8 %>
    </div><div class='control-group'>
      <%= f.label :categories, 'Select all categories that apply' %>
      <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) %>
    </div>
    <br/>
    <%= f.submit 'Share', class: 'btn btn-primary' %>
  <% end %>
</div>
