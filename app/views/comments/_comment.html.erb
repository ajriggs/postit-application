<% refer_to_post ||= false %>
<div class ='well span0 text-center'>
  <% if logged_in? %>
    <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: 'post', remote: true do %>
      <i class='icon-arrow-up'></i>
    <% end %>
    <br/>
  <% end %>
  <span id='comment_<%= comment.id %>_votes'><%= "#{pluralize(comment.net_votes, 'vote')}" %></span>
  <br/>
  <% if logged_in? %>
    <%= link_to vote_post_comment_path(comment.post, comment, vote: false), method: 'post', remote: true do %>
      <i class='icon-arrow-down'></i>
    <% end %>
  <% end %>
</div>
<div class='row'>
  <div class='well span8'>
    <em>"<%= comment.body %>"</em>
    <% if refer_to_post %>
      on <%= link_to comment.post.title, post_path(comment.post) %>
    <% end %>
    <br/>
    <span class='quiet'>by</span> <%= link_to comment.author.username, user_path(comment.author) %> at <small><%= format_datetime(comment.created_at) %></small>
  </div>
</div>
