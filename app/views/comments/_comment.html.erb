<% unless comment.body == nil %>
  <div class='row'>
    <div class='well span 8'>
      <em>"<%= comment.body %>"</em>
      <br/>
      <span class='quiet'>by</span> <%= link_to comment.author.username, '' %> at <small><%= format_datetime(comment.created_at) %></small>
    </div>
  </div>
<% end %>
